<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:padding="10dp"
    android:layout_margin="3dp"
    android:focusable="true"
    android:background="@drawable/layout_design"
    android:backgroundTint="#322D2D">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artWorkLay"
        android:background="@drawable/layout_design"
        android:backgroundTint="@color/black"
        >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_artwork"
        android:background="@drawable/ic_audiotrack_24"
        />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_title"
        android:text="Songs Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingRight="50dp"
        android:paddingEnd="50dp"
        android:layout_toRightOf="@+id/artWorkLay"
        android:layout_toEndOf="@+id/artWorkLay"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/artWorkLay"
        android:layout_toEndOf="@+id/artWorkLay"
        android:text="Artist"
        android:layout_below="@+id/iv_title"
        android:id="@+id/iv_artist"/>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:text="3:05"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_like_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_duration"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/whiteheart"
        android:visibility="visible"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>